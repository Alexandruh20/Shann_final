<script>
function toggleMusic() {
    
    var music = document.getElementById("music");
    var button = document.querySelector("button");

    if (music.paused) {
        music.play();
        button.textContent = "‚è∏ Pause Music";
    } else {
        music.pause();
        button.textContent = "üéµ Play Music";
    }
}
</script>
